{
    "name": "splash/sylius-bundle",
    "description": "Splash Bundle for Sylius E-Commerce Solution",

    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    
    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "autoload": {
        "psr-4": { 
            "Splash\\Sylius\\":     "src/"
        },
        "files":    [ 
            "tests/KernelTestCase.php"
        ]
    },
    
    "autoload-dev": {
        "psr-4": { 
            "Splash\\Sylius\\Test\\":     "tests/"
        }        
    },
    
    "require": {
        "php":                                          "^7.2",
        "splash/php-bundle":                            "~1.0"
    },
    
    "require-dev": {
        
        "sylius/sylius":                                "^1.4",
        "symfony/debug-bundle":                         "^4.2",
        "symfony/web-profiler-bundle":                  "^4.2",
        "symfony/web-server-bundle":                    "^4.2",
        
        "phpunit/phpunit":                              ">7",
        
        "composer/composer":                            "^1.5",
        "j13k/yaml-lint":                               "^1.1",
        "jakub-onderka/php-parallel-lint":              "^1.0",
        "phpmd/phpmd":                                  "^2.6",
        "phpro/grumphp":                                "^0.14.0",
        "sclable/xml-lint":                             "^0.2.4",
        "sebastian/phpcpd":                             ">3.0",
        "seld/jsonlint":                                "^1.7",
        "sensiolabs/security-checker":                  "^5.0",
        "squizlabs/php_codesniffer":                    "^3.2",
        "friendsofphp/php-cs-fixer":                    "^2.10",
        
        "escapestudios/symfony2-coding-standard":       "^3.4",
        "phpstan/phpstan-symfony":                      "^0.10",
        "phpstan/phpstan-doctrine":                     "^0.10",
        "phpstan/phpstan-phpunit":                      "^0.10",
        "phpstan/phpstan-shim":                         "^0.10"
    }    
}
